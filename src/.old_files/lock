#!/bin/bash
i3lock \
  -c "#b3b3ff" \
  -i ~/wallpapers/lockscreen.png \
  --time-font="Roboto" \
  --time-color="#b3b3ff" \
  --time-str="%H:%M" \
  --date-font="Roboto" \
  --date-color="#b3b3ff" \
  --date-str="%y.%m.%d" \
  --ring-width=4 \
  --ring-color="#b3b3ff" \
  --ringver-color="#b3b3ff" \
  --ringwrong-color="#ff0000" \
  --inside-color="#000000" \
  --insidever-color="#000000" \
  --insidewrong-color="#000000" \
  --keyhl-color="#ffb3ff" \
  --wrong-color="#ff0000" \
  --verif-color="#b3b3ff" \
  --bshl-color="#ffffb3" \
  --clock \
  --blur=5